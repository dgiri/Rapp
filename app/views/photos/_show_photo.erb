<div id="photoCarousel" class="carousel">
  <div class="carousel-inner">
    <% @photos.each do |photo| %>
      <div class=" <%= photo.id == @photo.id ? 'active' : '' %> item">
        <%= image_tag(photo.image.url(:large)) %>
        <div class="carousel-caption">
          <h4><%= photo.label %></h4>
          <p><%= photo.note %></p>
        </div>
      </div>
    <% end %>    
  </div>

  <a class="carousel-control left" href="#photoCarousel" data-slide="prev">&lsaquo;</a>
  <a class="carousel-control right" href="#photoCarousel" data-slide="next">&rsaquo;</a>
</div>


